<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".configuracoes"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configurações"
        android:textSize="22sp"
        android:fontFamily="monospace"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fundo_card"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gerenciar notificações"
            android:drawableRight="@drawable/seguir"
            android:textSize="18sp"
            android:fontFamily="monospace"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fundo_card"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sobre esta versão"
            android:drawableRight="@drawable/seguir"
            android:textSize="18sp"
            android:fontFamily="monospace"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fundo_card"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Segurança"
            android:drawableRight="@drawable/seguir"
            android:textSize="18sp"
            android:fontFamily="monospace"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fundo_card"
        android:orientation="horizontal"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Limpar histórico de busca"
            android:textSize="18sp"
            android:fontFamily="monospace"
            android:textColor="#000000"/>
    </LinearLayout>

    <include layout="@layout/rodape"/>

</LinearLayout>