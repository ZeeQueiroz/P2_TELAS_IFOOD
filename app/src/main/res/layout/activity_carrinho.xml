<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    tools:context=".carrinho">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carrinho de Compras"
        android:fontFamily="monospace"
        android:textSize="22sp"
        android:layout_marginBottom="16dp"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fundo_card"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginBottom="24dp"
        android:elevation="4dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/pizza1_foreground"
            android:scaleType="centerCrop"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pizza Portuguesa"
            android:fontFamily="monospace"
            android:textSize="18sp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preço unitário: R$ 43,00"
            android:fontFamily="monospace"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="#666666"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:gravity="center"
                android:background="@drawable/borda"
                android:text="-"
                android:textSize="22sp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:gravity="center"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/borda"
                android:text="1"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:gravity="center"
                android:background="@drawable/borda"
                android:text="+"
                android:textSize="22sp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: R$ 43,00"
        android:fontFamily="monospace"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/botaoFinalizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Finalizar Pedido"
        android:fontFamily="monospace"
        android:backgroundTint="#EA1D2C"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"/>

</LinearLayout>
