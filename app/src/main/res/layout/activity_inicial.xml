<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".inicial">

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="7dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="4dp">

            <ImageButton
                android:id="@+id/restaurantes"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@mipmap/restaurante_foreground"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurantes"
                android:fontFamily="monospace"
                android:textSize="11sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="4dp">

            <ImageButton
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@mipmap/mercado_foreground"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mercados"
                android:fontFamily="monospace"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="4dp">

            <ImageButton
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@mipmap/farmacia_foreground"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fármacias"
                android:fontFamily="monospace"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="4dp">

            <ImageButton
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@mipmap/promocao_foreground"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Promoções"
                android:fontFamily="monospace"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="4dp">

            <ImageButton
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@mipmap/bebida_foreground"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bebidas"
                android:fontFamily="monospace"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="4dp">

            <ImageButton
                android:id="@+id/botaoCupom"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@mipmap/cupom_foreground"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cupons"
                android:fontFamily="monospace"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="4dp">

            <ImageButton
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@mipmap/gourmet_foreground"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gourmet"
                android:fontFamily="monospace"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="4dp">

            <ImageButton
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@mipmap/shopping_foreground"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shopping"
                android:fontFamily="monospace"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="7dp"
            android:paddingEnd="7dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pizzas"
                android:fontFamily="monospace"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver mais"
                android:fontFamily="monospace"
                android:textColor="#EA1D2C"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/pizza1_foreground"
                    android:scaleType="centerCrop"/>

                <Button
                    android:id="@+id/botãoPizza1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pizzaria do Zé"
                    android:fontFamily="monospace"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:backgroundTint="#ffffff"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/sorvete_foreground"
                    android:scaleType="centerCrop"/>

                <Button
                    android:id="@+id/botãoSorvete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sorveteria Nord"
                    android:fontFamily="monospace"
                    android:textColor="#000000"
                    android:textAlignment="center"
                    android:backgroundTint="#ffffff"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sua loja nº 1!"
            android:fontFamily="monospace"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver mais"
            android:fontFamily="monospace"
            android:textColor="#EA1D2C"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/fundo_card">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ponto_foreground"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:padding="16dp"
            android:gravity="center"
            android:text="Ponto do Smash Burguer"
            android:fontFamily="monospace"
            android:textSize="15sp" />
    </LinearLayout>

    <include layout="@layout/rodape"/>

</LinearLayout>