<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".favoritos">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Favoritos"
            android:fontFamily="monospace"
            android:textColor="#000000"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/fundo_card"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pizzaria do Zé"
                android:fontFamily="monospace"
                android:textColor="#000000"
                android:drawableEnd="@drawable/baseline_favorite_24"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:paddingEnd="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/fundo_card"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Smash Burguer"
                android:fontFamily="monospace"
                android:textColor="#000000"
                android:drawableEnd="@drawable/baseline_favorite_24"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:paddingEnd="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/fundo_card"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nord Sorvetes"
                android:fontFamily="monospace"
                android:textColor="#000000"
                android:drawableEnd="@drawable/baseline_favorite_24"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:paddingEnd="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/fundo_card"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estância Grill"
                android:fontFamily="monospace"
                android:textColor="#000000"
                android:drawableEnd="@drawable/baseline_favorite_24"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:paddingEnd="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/fundo_card"
            android:padding="16dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Café da Vila"
                android:fontFamily="monospace"
                android:textColor="#000000"
                android:drawableEnd="@drawable/baseline_favorite_24"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:paddingEnd="16dp"/>
        </LinearLayout>

    <include layout="@layout/rodape"/>

</LinearLayout>