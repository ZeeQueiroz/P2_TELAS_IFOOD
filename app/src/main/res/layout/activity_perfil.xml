<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    tools:context=".perfil">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PERFIL"
        android:textColor="#000000"
        android:fontFamily="monospace"
        android:layout_gravity="center"
        android:textSize="17dp"
        android:layout_marginBottom="7dp"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/usuario"
        android:layout_marginBottom="16dp"
        android:background="@drawable/fundo_redondo"
        android:padding="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Igor"
        android:textSize="17sp"
        android:fontFamily="monospace"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="igor@gmail.com"
        android:fontFamily="monospace"
        android:textSize="16sp"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/botaoFavorito"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="Favoritos"
        android:fontFamily="monospace"
        android:drawableLeft="@drawable/favorito"
        android:backgroundTint="#EA1D2C"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="3dp"
        app:cornerRadius="7dp"/>

    <Button
        android:id="@+id/botaoFormasPgto"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="Pagamentos"
        android:fontFamily="monospace"
        android:drawableLeft="@drawable/card"
        android:backgroundTint="#EA1D2C"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="3dp"
        app:cornerRadius="7dp"/>

    <Button
        android:id="@+id/botaoConfiguracao"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="Configurações"
        android:fontFamily="monospace"
        android:drawableLeft="@drawable/config"
        android:backgroundTint="#EA1D2C"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="3dp"
        app:cornerRadius="7dp"/>

    <Button
        android:id="@+id/botaoSair"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="Sair"
        android:fontFamily="monospace"
        android:backgroundTint="#D32F2F"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="6dp"
        app:cornerRadius="7dp"/>

    <include layout="@layout/rodape"/>

</LinearLayout>